<%= semantic_form_for @my_form do |f| %>
  <%= f.inputs do %>
  <br />
  <br />
    <%= f.input :name, :input_html => { :size => 10 } %>
    <%= f.input :gender, :as => :radio, :collection => ["Male", "Female"] %>
    <%= f.input :category, :as => :select, :collection => Contact.pluck(:name) %>
    <%= f.input :date %>
    <%= f.input :subjects, :as => :check_boxes, :collection => ["Rails", "jQuery", "Java", "HTML", "CSS"] %>
    <%= f.input :address, :input_html => { :class => 'autogrow', :rows => 10, :cols => 20, :maxlength => 10  } %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :input %>
  <% end %>
<% end %>
